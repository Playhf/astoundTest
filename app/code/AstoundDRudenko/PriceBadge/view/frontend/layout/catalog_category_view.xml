<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="category.products.list">
            <action method="setTemplate" ifconfig="catalog/price_badge/active">
                <argument name="template" xsi:type="string">AstoundDRudenko_PriceBadge::product/list.phtml</argument>
            </action>
            <arguments>
                <argument name="previous_price_view_model" xsi:type="object">AstoundDRudenko\PriceBadge\ViewModel\Product\PreviousPrice</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
